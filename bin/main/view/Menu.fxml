<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<MenuBar xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="album.controleur.MenuController" fx:id="menuBar">
    <Menu text="Album">
        <MenuItem text="Créer un nouvel album" onAction="#handleNewAlbum"/>
        <MenuItem text="Sauvegarder l'album" onAction="#handleSave"/>
        <MenuItem text="Supprimer l'album" onAction="#handleDel"/>
        <Menu text="Autre album" fx:id="otherAlbum"/>
    </Menu>
    <Menu text="Outils">
        <MenuItem text="Nom de l'album" onAction="#handleSetAlbumName"/>
        <MenuItem text="Mode Vignettes" onAction="#handleGlobalOverview"/>
        <MenuItem text="Changer le répertoire" onAction="#handleChangeDirectoy"/>
        <MenuItem text="Rafraichir le répertoire" onAction="#handleRefreshDirectoy"/>
    </Menu>
    <Menu text="Application">
    <MenuItem text="Retour à l'acceuil" onAction="#handleAcceuil"/>
    <MenuItem text="Quitter" onAction="#handleQuit"/>
</Menu>
</MenuBar>
